<!DOCTYPE html>
<html>
  <head>
    <%- include(`${global.path}/components/head.ejs`, {
      head,
      global
    }) %>
  </head>
  <body>
    <div class="totonoo--layout totonoo--timeline">
      <%- include(`${global.path}/components/header.ejs`, {
        header,
        aside
      }) %>
      <div class="totonoo--main-box">
        <div class="totonoo--main-scroll">
          <div class="totonoo--timeline-box">
            <ul>
              <li class="first"><div class="arrow"></div></li>
              <%
              const list = main.list || []
              %>
              <%
              list.forEach((item, index) => {
              %>
              <li class="item">
                <% if (index == 0 ) { %>
                <small>此时此刻</small>
                <% } else { %>
                <small><%= global.formatDatetime(item.publishDate) %></small>
                <% } %>
                <% if (item.link) { %>
                <a href="<%= item.link %>">
                <% } %>
                  <span class="content">
                    <%= item.title %>
                    <% if (item.image) { %>
                    <img src="<%= item.image %>">
                    <% } %>
                  </span>
                <% if (item.link) { %>
                </a>
                <% } %>
              </li>
              <%
              })
              %>          
              <li class="last"><div class="arrow"></div></li>
            </ul>
          </div>
          <%- include(`${global.path}/components/footer.ejs`, {
            global,
            footer
          }) %>
        </div>
      </div>
    </div>
    <%- include(`${global.path}/components/scripts.ejs`, {
      global,
      scripts
    }) %>
  </body>
</html>
